<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Ferus{% endblock %}</title>

        {% block stylesheets %}
            {% stylesheets 
                'bundles/applicationbde/css/bootstrap.min.css'
                'bundles/applicationbde/css/bootstrap-reset.css'
                'bundles/applicationbde/css/font-awesome.css'
                'bundles/applicationbde/css/style.css'
                'bundles/applicationbde/css/style-responsive.css'

                filter='cssrewrite,?yui_css' 
            %}
                <link rel="stylesheet" href="{{ asset_url }}" type='text/css' />
            {% endstylesheets %} 
        {% endblock %}
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic" type='text/css' />
        

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
        <!--[if lt IE 9]>
          <script src="{{ asset('bundles/applicationbde/js/html5shiv.js') }}"></script>
          <script src="{{ asset('bundles/applicationbde/js/respond.min.js') }}"></script>
        <![endif]-->
        <link rel="icon" type="image/vnd.microsoft.icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body {# style="background-color: white;" #}>
        <section id="container" class="">
            <!--header start-->
            <header class="header" style="background: rgb(62, 200, 183);">
                <div class="sidebar-toggle-box">
                    <div data-original-title="Activé/désactivé" data-placement="right" class="fa fa-bars tooltips" style="color:white;"></div>
                </div>
                <!--logo start-->
                <a href="{{ url('sonata_news_archive') }}" class="logo">Ferus</a>
                <!--logo end-->

                <div class="nav notify-row" id="top_menu">
                    <!--  notification start -->
                    <ul class="nav top-menu">
                        {# {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <!-- notification dropdown start-->
                            <li id="header_notification_bar" class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">

                                    <i class="fa fa-bell-o"></i>
                                    <span class="badge bg-warning">7</span>
                                </a>
                                <ul class="dropdown-menu extended notification">
                                    <div class="notify-arrow notify-arrow-yellow"></div>
                                    <li>
                                        <p class="yellow">You have 7 new notifications</p>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="label label-danger"><i class="fa fa-bolt"></i></span>
                                            Server #3 overloaded.
                                            <span class="small italic">34 mins</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="label label-warning"><i class="fa fa-bell"></i></span>
                                            Server #10 not respoding.
                                            <span class="small italic">1 Hours</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="label label-danger"><i class="fa fa-bolt"></i></span>
                                            Database overloaded 24%.
                                            <span class="small italic">4 hrs</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="label label-success"><i class="fa fa-plus"></i></span>
                                            New user registered.
                                            <span class="small italic">Just now</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="label label-info"><i class="fa fa-bullhorn"></i></span>
                                            Application error.
                                            <span class="small italic">10 mins</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">See all notifications</a>
                                    </li>
                                </ul>
                            </li>
                            <!-- notification dropdown end -->
                        {% endif %} #}
                    </ul>
                </div>
                <div class="top-nav ">
                    <ul class="nav pull-right top-menu">
{#                         <li>
                            <input type="text" class="form-control search" placeholder="Search">
                        </li> #}
                        <!-- user login dropdown start-->
                        {% if app.security and app.security.token and is_granted('ROLE_SONATA_ADMIN') %}
                            <li>
                                <a href="{{ path('sonata_admin_dashboard') }}">{{ "title_dashboard"|trans({}, 'SonataAdminBundle') }}</a>
                            </li>
                        {% endif %}
                        <li class="dropdown">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                    <span class="username">{{ app.user.username }}</span>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu extended logout">
                                    <div class="log-arrow-up"></div>
                                    <li><a href="{{ path('sonata_user_profile_show') }}"><i class=" fa fa-suitcase"></i>Profile</a>
                                    </li>
                                    <li><a href="#"><i class="fa fa-cog"></i> Settings</a>
                                    </li>
                                    <li><a href="#"><i class="fa fa-bell-o"></i> Notification</a>
                                    </li>
                                    <li><a href="{{ path('sonata_user_security_logout') }}"><i class="fa fa-key"></i>Déconnexion</a>
                                    </li>
                                </ul>
                            {% else %}
                                <a class="dropdown-toggle" href="{{ path('sonata_user_security_login') }}">
                                    Connexion
                                </a>
                            {% endif %}
                        </li>
                        <!-- user login dropdown end -->
                    </ul>
                </div>
            </header>
            <!--header end-->

            <!--sidebar start-->
            {% include '::menu.html.twig' %}
            <!--sidebar end-->

            <!--main content start-->
            <section id="main-content">
                <section class="wrapper site-min-height">
                    <!-- page start-->
                    {% block container %}
                    <div class="container">
                        <div class="content">
                            <div class="row">
                                {% for type, flashMessages in app.session.flashbag.all() %}
                                    {% for flashMessage in flashMessages %}
                                        <div class="alert alert-{{ type }}">
                                            {{ flashMessage }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                                {% block body %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                    {% endblock %}
                    <!-- page end-->
                </section>
            </section>
            <!--main content end-->

            <!--footer start-->
            <footer class="site-footer">
                <div class="text-center">
                    2014 &copy; BDE Ferus
                    <a href="#" class="go-top">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
            </footer>
            <!--footer end-->
        </section>

        {% block javascripts %}
            <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
            <!--[if lt IE 9]>
                <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->

            {% javascripts 
                'bundles/applicationbde/js/jquery.js' 
                'bundles/applicationbde/js/bootstrap.min.js' 
                'bundles/applicationbde/js/jquery.dcjqaccordion.2.7.js' 
                'bundles/applicationbde/js/jquery.scrollTo.min.js' 
                'bundles/applicationbde/js/jquery.nicescroll.js' 
                'bundles/applicationbde/js/respond.min.js'
                'bundles/applicationbde/js/common-scripts.js' 
                'bundles/applicationbde/js/modernizr.custom.js'

                filter='?yui_js' 
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %} 
            <!-- Piwik -->
            <script type="text/javascript">
              var _paq = _paq || [];
              _paq.push(['trackPageView']);
              _paq.push(['enableLinkTracking']);
              (function() {
                var u=(("https:" == document.location.protocol) ? "https" : "http") + "://{{ piwik_url }}";
                _paq.push(['setTrackerUrl', u+'piwik.php']);
                _paq.push(['setSiteId', {{ piwik_id }}]);
                var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0]; g.type='text/javascript';
                g.defer=true; g.async=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
              })();
            </script>
            <noscript><p><img src="http://{{ piwik_url }}piwik.php?idsite={{ piwik_id }}" style="border:0;" alt="" /></p></noscript>
            <!-- End Piwik Code -->
        {% endblock %}
    </body>
</html>