{% block user_block %}
    {% if app.user %}
        <li class="user-header bg-light-red">
            <img src="//www.gravatar.com/avatar/{{ app.user.email|md5 }}?d=retro" class="img-circle" alt="User Image">
            <p>
                {{ app.user }}
            </p>
        </li>
        <li class="user-footer">
            <div class="btn-group btn-group-justified btn-group-sm" role="group" aria-label="...">
                <a href="{{ path('application_bde_homepage') }}" class="btn btn-default btn-flat">
                    <i class="glyphicon glyphicon-log-out"></i> Sortir
                </a>
                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                    <a href="{{ path('sonata_admin_dashboard', {'_switch_user': '_exit'}) }}" class="btn btn-default btn-flat">
                        <i class="fa fa-reply"></i> Retour
                    </a>
                {% endif %}
                <a href="{{ url('sonata_user_admin_security_logout') }}" class="btn btn-default btn-flat">
                    <i class="fa fa-power-off"></i> {{ 'user_block_logout'|trans({}, 'SonataUserBundle') }}
                </a>
            </div>
        </li>
    {% endif %}
{% endblock %}