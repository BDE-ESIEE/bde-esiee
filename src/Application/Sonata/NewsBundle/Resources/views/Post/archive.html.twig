{% extends '::base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    {% sonata_template_box 'Liste des news' %}
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                News
            </header>
            <div class="panel-body profile-activity">
                {% set alt = false %}
                {% for post in pager.getResults() %}
                    <div class="activity terques {% if alt %}alt{% endif %}">
                        <span>
                            {% if post.collection.cssClass %}
                                <i class="{{ post.collection.cssClass }}"></i>
                            {% else %}
                                <i class="fa fa-bullhorn"></i>
                            {% endif %}
                        </span>
                        <div class="activity-desk">
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="arrow{% if alt %}-alt{% endif %}"></div>
                                    <h4><a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}">{{ post.title }}</a></h4>
                                    <i class=" fa fa-clock-o"></i>
                                    <h4>{{ post.publicationDateStart | format_date }}</h4>
                                    <p>{{ post.abstract }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% set alt = not alt %}
                {% else %}
                    {{ 'no_post_found'|trans({}, 'SonataNewsBundle') }}
                {% endfor %}
