{% extends "::base.html.twig" %}

{% block title 'ESIEE Games' %}
{% block description 'Tableau d\'avancement des ESIEE Games : o√π en sont les clubs.' %}

{% set contains_editable_block = 'yes' %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets
		'bundles/esieegames/css/esieegames.css'
		filter='cssrewrite,?yui_css'
        output='css/esieegames.min.css'
	 %}
		<link rel="stylesheet" href="{{ asset_url }}" type='text/css'/>
	{% endstylesheets %}
{% endblock %}

{% block body %}
<div class="esiee-games">
	<section class="header container">
		<h1>ESIEE GAMES</h1>
		<p>{{ block('description') }}</p>
	</section>
	<section class="podium-area">
		<div class="podium">
			{% set podium =  ['2' => clubs[1],'1' => clubs[0],'3' => clubs[2]] %}
			{% for rank,club in podium %}
				<div class="club-X">
					<div class="club-desc">
						<img src="{{club.logoUrl}}" alt="{{club.title}}">
						<h2>{{club.title}}</h2>
					</div>
					<div class="step">
						<p><span>{{rank}}</span></p>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
	<section class="podium-area small">
		<div class="podium">
			{% for club in clubs|slice(2, 8) %}
				<div class="club-4">
					<div class="club-desc small-desc">
						<img src="{{club.logoUrl}}" alt="{{club.title}}">
						<h2>{{club.title}}</h2>
					</div>
					<div class="small-step step">
						<p><span>{{ loop.index + 3 }}</span></p>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
	<section class="tableau container">
		<table class="table">
			<thead>
				<tr>
					<th>Rang</th>
					<th>Nom du club</th>
					<th>Points</th>
				</tr>
			</thead>
			<tbody>
				{% for club in clubs %}
					<tr>
						<th scope="row">1</th>
						<td>{{club.title}}</td>
						<td>{{club.points}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="http://cdn.jsdelivr.net/mojs/latest/mo.min.js"></script>
	<script>
	$(document).on("ready",function(){
		const burst = new mojs.Burst({
			parent:document.querySelector('.club-1 .imgwrap'),
			radius: {65:130},
			count: 30,
			x:0,
			y:0,
			children : {
				repeat:999999999,
				fill: '#ffc53a',
				opacity: 1,
				radius: 3,
				duration: 2000,
				isSwirl: true,
				swirlSize: 'rand(20,40)',
				swirlFrequency: 'rand(5,8)',
				delay: 'stagger( rand(0, 300) )',
				//easing: mojs.easing.bezier(0.1, 1, 0.3, 1)
			}
		}).play();
		});
	</script>
{% endblock %}
