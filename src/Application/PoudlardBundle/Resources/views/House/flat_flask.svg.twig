        <mask id="flask-wave-mask{{ house }}" width="180" height="253">
            <rect width="180" height="253" fill="url(#flask-wave-pattern{{ house }})" />
            <rect width="180" height="253" fill="url(#flask-bubble-fill{{ house }})" />
        </mask>

        <pattern id="flask-wave-pattern{{ house }}" patternUnits="userSpaceOnUse" width="180" height="253">
            <path fill="#fff" d="M0,6.1c19.8,0,16.5-3.6,27.1-3.6s13.8,7.7,23.5,7.7S68.1,0,77.5, 0S92.2,7.6,102,7.6s17.2-4.5,25-4.5 s16.1,5.6,23.3,5.6s12.4-6.4,18.4-6.4S175,6.1,180,6.1V253H0V6.1z"/>
            <animate attributeName="x" attributeType="XML"
                from="0"  to="180"
                begin="0s" dur="2s"
                fill="remove" repeatCount="indefinite"/>
        </pattern>

        <pattern id="flask-bubble-fill{{ house }}" patternUnits="userSpaceOnUse" width="180" height="253">
            <circle fill="#000" cx="150" cy="10" r="8"/>
            <circle fill="#000" cx="120" cy="40" r="6"/>
            <circle fill="#000" cx="70" cy="60" r="3"/>
            <circle fill="#000" cx="100" cy="100" r="4"/>
            <circle fill="#000" cx="40" cy="150" r="10"/>
            <circle fill="#000" cx="20" cy="180" r="3"/>

            <animate attributeName="y" attributeType="XML"
                     from="0"  to="-253"
                     begin="0s" dur="5s"
                     fill="remove" repeatCount="indefinite"/>
        </pattern>
    </defs>

    <rect class="flask-bg" x="0" y="0" height="300" width="200"
        fill="#F6F6E4" mask="url(#flask-mask{{ house }})"/>

    <g class="flask-effect">
        <linearGradient id="SVGID_1_{{ house }}" gradientUnits="userSpaceOnUse" x1="129.9952" y1="158" x2="184.855" y2="158">
            <stop  offset="0" style="stop-color:#000000;stop-opacity:0.2"/>
            <stop  offset="1" style="stop-color:#1D1D1B;stop-opacity:0"/>
        </linearGradient>
        <path fill="url(#SVGID_1_{{ house }})" d="M124.9,133.1l61.6,49.8c0,0-9.4-23.1-25.1-35.5S124.9,133.1,124.9,133.1z"/>
        <linearGradient id="SVGID_2_{{ house }}" gradientUnits="userSpaceOnUse" x1="75.6667" y1="45.0657" x2="125.6674" y2="45.0657">
            <stop  offset="0" style="stop-color:#000000;stop-opacity:0.3"/>
            <stop  offset="1" style="stop-color:#1D1D1B;stop-opacity:0.1"/>
        </linearGradient>
        <polygon fill="url(#SVGID_2_{{ house }})" points="71,36.1 100,43.1 127.2,54 127.2,36.1 "/>
    </g>

    <svg class="flask-liquid" mask="url(#flask-mask{{ house }})">
        <svg x="10" y="{{ 37 + 253 - (2.53*percent)|round }}" width="180" height="253" viewbox="0,0,180,253" preserveAspectRatio="none">
            <rect fill="{{ color }}" width="180" height="253" mask="url(#flask-wave-mask{{ house }})"/>
        </svg>
    </svg>

    <g class="flask-shadow" opacity="0.11">
	    <path fill="#1D1D1B" d="M133.1,131l-3.3-1.2V31.5H100V295h54.6c36.5-28,40.4-60.8,40.4-73.8C195,159.8,151.7,137.6,133.1,131z"/>
