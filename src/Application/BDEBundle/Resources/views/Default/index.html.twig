                </i>
                <h2>L'équipe</h2>
            </div>
            {{ sonata_block_render({ 
                'type': 'application.sonata.block.service.editable_text', 
                'settings' : {
                    'title' : 'index_equipe'
                }
            }) }}
            <a href="{{ path('application_bde_aboutus') }}" class="btn btn-purchase" style="width:100%;">Découvre nous !</a>
        </section>
    </div>
    <div class="col-lg-4 col-sm-4">
        <section>
            <div class="f-box">
                <i class="fa fa-building"></i>
                <h2>Entreprises</h2>
            </div>
            {{ sonata_block_render({ 
                'type': 'application.sonata.block.service.editable_text', 
                'settings' : {
                    'title' : 'index_entreprises'
                }
            }) }}
            <a href="{{ path('application_bde_partnership') }}" class="btn btn-purchase" style="width:100%;">Devenir partenaire</a>
        </section>
    </div>
