            }) }}
            <a href="{{ path('application_bde_association') }}" class="btn btn-purchase" style="width:100%;">Le BDE</a>
        </section>
    </div>
    <div class="col-lg-4 col-sm-4">
        <section>
            <div class="f-box">
                <i style="max-height: 51px;">
                    {% include 'ApplicationBDEBundle:Default:logo.svg.twig' %}
